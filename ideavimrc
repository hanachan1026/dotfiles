source ~/.vimrc.keymap

set clipboard=unnamed,autoselect
set surround
set laststatus=2
set foldopen=all
set hlsearch
set incsearch
set ignorecase
set smartcase

" TODO: dirty
nmap <Space> m

" formatting code
nnoremap == :action ReformatCode<CR>
vnoremap = :<bs><bs><bs><bs><bs>action VimVisualSwapSelections<cr>:action ReformatCode<cr>

" commentout
nnoremap cc :action CommentByLineComment<CR>
vnoremap cc :<bs><bs><bs><bs><bs>action VimVisualSwapSelections<cr>:action CommentByLineComment<cr>

" rename
nnoremap U :action FindUsages<CR>
nnoremap R :action Refactorings.QuickListPopupAction<CR>

nnoremap ' :action IntroduceVariable<CR>

" open file

nnoremap ma :action GotoAction<CR>
nnoremap me :action SearchEverywhere<CR>

nnoremap gd :action GotoDeclaration<CR>
nnoremap gs :action GotoSuperMethod<CR>
"nnoremap <Space>s :action FileStructurePopup<CR>
nnoremap ms :action FileStructurePopup<CR>

nnoremap mg :action FindInPath<CR>

" move tab
nnoremap sn :action NextTab<CR>
nnoremap sp :action PreviousTab<CR>
nnoremap <C-n> :action NextTab<CR>
nnoremap <C-p> :action PreviousTab<CR>

" back,forward
nnoremap gh :action Back<CR>
nnoremap gl :action Forward<CR>

" 選択拡大、縮小
"map K <A-Up>
"map J <A-Down>

" ライブテンプレ
inoremap <C-n> <C-o>:action InsertLiveTemplate<CR>

" クリップボード履歴
nnoremap mp :action PasteMultiple<CR>
nnoremap mP :action PasteMultiple<CR>

nnoremap <C-I> :action QuickImplementations<CR>

nnoremap f :action AceAction<CR>



source ~/.vimrc.keymap

set clipboard=unnamed,autoselect
set surround

" formatting code
nnoremap <silent> == :action ReformatCode<CR>

" commentout
nnoremap <silent> cc :action CommentByLineComment<CR>
vnoremap <silent> cc :action CommentByBlockComment<CR>

" rename
nnoremap <silent> U :action FindUsages<CR>
nnoremap <silent> R :action RenameElement<CR>

" open file

nnoremap <silent> ,a :action GotoAction<CR>
nnoremap <silent> ,e :action SearchEverywhere<CR>

nnoremap <silent> gd :action GotoDeclaration<CR>
"nnoremap <Space>s :action FileStructurePopup<CR>
nnoremap <silent> gs :action FileStructurePopup<CR>

nnoremap <silent> <Space>g :action FindInPath<CR>

" move tab
nnoremap <silent> sn :action NextTab<CR>
nnoremap <silent> sp :action PreviousTab<CR>

" back,forward
nnoremap <silent> gh :action Back<CR>
nnoremap <silent> gl :action Forward<CR>

" 選択拡大、縮小
"map <silent> K <A-Up>
"map <silent> J <A-Down>

" ライブテンプレ
inoremap <silent> <C-n> <C-o>:action InsertLiveTemplate<CR>

" クリップボード履歴
nnoremap <silent> mp :action PasteMultiple<CR>
nnoremap <silent> mP :action PasteMultiple<CR>

nnoremap <silent> <C-I> :action QuickImplementations<CR>


